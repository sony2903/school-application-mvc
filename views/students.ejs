<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <br>
    <h1 class="text-center">This is list of students</h1><br>  

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">First Name</th>
                <th class="text-center">Last Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Gender</th>
                <th class="text-center">Birth Date</th>
                <th colspan="3" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            </tr>
            <% students_list.forEach(item => { %>
            <tr>
                <td class="text-center"> <%= item.first_name %> </td>
                <td class="text-center"> <%= item.last_name %> </td>
                <td class="text-center"> <%= item.email %> </td>
                <td class="text-center"> <%= item.gender %> </td>
                <td class="text-center"> <%= item.birth_date %> </td>
                <td class="text-center"><a href="/students/<%= item.id %>/edit">Edit</a></td>
                <td class="text-center"><a href="/students/<%= item.id %>/delete">Delete</a></td>
            </tr>
            <% }) %>
    </table>

    <h3 class="text-center"><a href="/addStudent">Add Student</a></h3>
    <h3 class="text-center"><a href="/">Back to Homepage</a></h3>

</body>

</html>